/ {
	aliases {
		accel0 = &adxl362_apollo4p_evb_disp_shield_rev2;
	};
};

&spi1 {
	adxl362_apollo4p_evb_disp_shield_rev2: adxl362@0 {
		compatible = "adi,adxl362";
		reg = <0>;
		spi-max-frequency = <8000000>;
		int1-gpios = <&ambiq_header 31 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		status = "okay";
	};
};

